<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.controller.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>
    <VBox layoutX="250" layoutY="180" spacing="10">

        <Label fx:id="scoreLabel"
               text="Score: 0"
               styleClass="scoreClass"/>

        <Label fx:id="highScoreLabel"
               text="High Score: 0"
               styleClass="scoreClass"/>

        <Label fx:id="linesClearedLabel"
               text="Lines: 0"
               styleClass="scoreClass"/>

        <Label fx:id="levelLabel"
               text="Level: 1"
               styleClass="scoreClass"/>

        <Label fx:id="garbageInfoLabel"
               text="OFF"
               styleClass="scoreClass"/>

    </VBox>

    <BorderPane fx:id="nextPiecesContainer"
                layoutX="250"
                layoutY="20"
                prefWidth="100"
                prefHeight="100"
                style="-fx-border-color: white; -fx-padding: 10; -fx-border-width: 2;">

        <top>
            <Label text="Next Pieces"
                   BorderPane.alignment="CENTER"
                   style="-fx-font-size: 15px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
        </top>

        <center>
            <HBox fx:id="nextPiecesVBox"
                  spacing="60"
                  alignment="TOP_CENTER">

                <GridPane fx:id="nextPiece1"
                          hgap="1" vgap="1"
                          minWidth="150" minHeight="90"
                          alignment="CENTER"
                          style="-fx-border-color: white; -fx-padding: 5;"/>

                <GridPane fx:id="nextPiece2"
                          hgap="1" vgap="1"
                          minWidth="150" minHeight="90"
                          alignment="CENTER"
                          style="-fx-border-color: white; -fx-padding: 5;"/>

                <GridPane fx:id="nextPiece3"
                          hgap="1" vgap="1"
                          minWidth="150" minHeight="90"
                          alignment="CENTER"
                          style="-fx-border-color: white; -fx-padding: 5;"/>
            </HBox>
        </center>
    </BorderPane>

    <BorderPane fx:id="holdContainer"
                layoutX="600"
                layoutY="200"
                prefWidth="150"
                prefHeight="90"
                style="-fx-border-color:White; -fx-padding: 10; -fx-border-width: 2;">

        <top>
            <Label text="Hold"
                   BorderPane.alignment="CENTER"
                   style="-fx-font-size: 15px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
        </top>

        <center>
            <GridPane fx:id="holdPiece"
                      hgap="1" vgap="1"
                      minWidth="120" minHeight="90"
                      alignment="CENTER"
                      style="-fx-border-color: White; -fx-padding: 5;"/>
        </center>
    </BorderPane>

    <VBox layoutX="600"
          layoutY="400"
          spacing="10"
          alignment="CENTER">

        <Button text="New Game"
                onAction="#newGame"
                styleClass="ipad-dark-grey"
                prefWidth="140"/>

        <ToggleButton text="Pause"
                      fx:id="pauseButton"
                      onAction="#pauseGame"
                      styleClass="ipad-dark-grey"
                      prefWidth="140"/>
    </VBox>

    <VBox alignment="CENTER" layoutX="14" layoutY="250">
        <GameOverPanel fx:id="gameOverPanel"/>
    </VBox>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203" />

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>